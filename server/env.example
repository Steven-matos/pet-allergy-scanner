# Supabase Configuration
SUPABASE_URL=your_supabase_url_here
SUPABASE_KEY=your_supabase_anon_key_here
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key_here
# Get this from your Supabase project dashboard > Settings > API > JWT Secret
SUPABASE_JWT_SECRET=your_supabase_jwt_secret_here

# Database Configuration
DATABASE_URL=postgresql://user:password@localhost:5432/snifftest

# Security Configuration
SECRET_KEY=your_secret_key_here_min_32_chars
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=60

# CORS and Security
ALLOWED_ORIGINS_STR=http://localhost:3000,http://localhost:8080,http://localhost,https://localhost,capacitor://localhost,ionic://localhost,sniffsafe://,sniffsafe://localhost,https://api.petallergyscanner.com,https://petallergyscanner.com,https://your-app.up.railway.app
ALLOWED_HOSTS_STR=localhost,127.0.0.1,your-app.up.railway.app

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60
AUTH_RATE_LIMIT_PER_MINUTE=5

# Database Configuration
DATABASE_POOL_SIZE=10
DATABASE_TIMEOUT=30

# File Upload Limits
MAX_FILE_SIZE_MB=10
MAX_REQUEST_SIZE_MB=50

# Security Features
ENABLE_MFA=true
ENABLE_AUDIT_LOGGING=true
SESSION_TIMEOUT_MINUTES=480

# GDPR Compliance
DATA_RETENTION_DAYS=365
ENABLE_DATA_EXPORT=true
ENABLE_DATA_DELETION=true

# Push Notification Configuration (APNs)
# IMPORTANT: Must match aps-environment in SniffTest.entitlements
# - production: https://api.push.apple.com (for App Store builds)
# - development/sandbox: https://api.sandbox.push.apple.com (for debug builds)
APNS_URL=https://api.push.apple.com
# Get these from your Apple Developer account
APNS_KEY_ID=your_apns_key_id_here
APNS_TEAM_ID=your_apns_team_id_here
APNS_BUNDLE_ID=com.snifftest.app
# APNs private key content (P8 format) - single line
APNS_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nyour_private_key_content_here\n-----END PRIVATE KEY-----"

# RevenueCat Integration
# Get from RevenueCat Dashboard → Project Settings → API Keys → Secret Key
REVENUECAT_API_KEY=your_revenuecat_secret_api_key_here
# Generate a secure random string (32+ characters) for webhook signature verification
REVENUECAT_WEBHOOK_SECRET=your_revenuecat_webhook_secret_here
# Admin users with full premium access without subscription
# Comma-separated list of email addresses or domains (starting with @)
# These users bypass all subscription checks and always have premium access
# Examples:
#   PROTECTED_PREMIUM_EMAILS=admin@example.com
#   PROTECTED_PREMIUM_EMAILS=admin@example.com,developer@example.com
#   PROTECTED_PREMIUM_EMAILS=@example.com  # Protects entire domain
PROTECTED_PREMIUM_EMAILS=

# Environment variables for log control
LOG_LEVEL=INFO                   # DEBUG, INFO, WARNING, ERROR, CRITICAL
VERBOSE_LOGGING=false            # Enable detailed debug logging
DEBUG=false                      # General debug mode
ENVIRONMENT=development          # development, staging, production
